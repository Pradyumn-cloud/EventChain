{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./dist",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "declaration": true,
    "declarationMap": true
  },
  "include": ["src/**/*", "generated/**/*", "prisma.config.ts"],
  "exclude": ["node_modules", "dist"]
}